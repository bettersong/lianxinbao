.B_main{
    width:70%;
    height: 720px;
    margin:30px auto;
    position:relative;
}
.B_main .B_main_left{
    width: 255px;
    height:300px;
    position:absolute;
    top:0px;
    left:0px;
    border:1px solid #ffeacb;
}
.B_main_left .BL_head{
    width:100%;
    height: 40px;
    background:url("../images/BL_bg.png") no-repeat center/100% 100%;
}
 .BL_head span{
    display: block;
    font-size: 18px;
    font-weight: bold;
    color:#ad2026;
    line-height: 40px;
    margin-left: 30px;
}
.B_main_left .BL_one,.B_main_left .BL_two{
   width:85%;
   height: 40px;
   background:url("../images/BL_mid.png") no-repeat center/100% 100%;
   margin:20px auto;
   cursor:pointer;
}
.BL_one a,.BL_two a{
    text-decoration: none;
    display: block;
    font-size: 18px;
    color:#ad2026;
    line-height: 40px;
    margin-left: 50px;
}
.B_main .B_main_right{
    width: 670px;
    height: 710px;
    position:absolute;
    top:0px;
    right:0px;
    border:1px solid #ffeacb;
}
.BR_head{
    width:100%;
    height: 40px;
    background:url("../images/BR_head.png") no-repeat center/100% 100%;
    position:relative;
}
.BR_head .BR_head_left{
    width: 20px;
    height: 20px;
    background:url("../images/BR_left.png") no-repeat center/100% 100%;
    position:absolute;
    left: 20px;
    top:9px;
}
.BR_head span{
    position:absolute;
    top: 7px;
    left: 60px;
    font-size: 16px;
}
.right1_main{
    width:200px;
    height:300px;
    background:pink;
}
.right2_main{
    width:200px;
    height:300px;
    background:#ccc;
}
.right3_main{
    width:200px;
    height:300px;
    background:#ff0;
}
.shalong_main{
    width:90%;
    height:92%;
    margin:0 auto;
}
.shalong_main ul{
    list-style: none;
    padding:0px;
}
.shalong_main ul li{
    width:100%;
    height:150px;
    border-bottom: 2px dashed #ccc;
    margin-top:10px;
    position:relative;
}
.SL_main_left{
    width:40%;
    height:90%;
    background:url("../images/xijinping.png") no-repeat center/100% 100%;
    position:absolute;
    left:15px;
}
.SL_main_right{
    width:50%;
    height:90%;
    position:absolute;
    right:15px;
}
.SL_main_right p{
    position:absolute;
    font-size:15px;
    color:#999;
    line-height:25px;
}
.SL_main_right span{
    position:absolute;
    bottom:0px;
    font-size:15px;
    color:#999;
}